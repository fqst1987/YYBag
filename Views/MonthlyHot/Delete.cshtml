@model YYBagProgram.Models.MonthlyHot;

@{
    ViewData["titlemsg"] = "本月熱銷(刪除)";
}
<head>
    <title>YYBag-@ViewData["titlemsg"]</title>
</head>
<div class="main_editor">
    <form asp-action="Delete" method="post">
        <div id="delete_top" class="main_top_column">
            <div class="form_group">
                <label class="comm_label">@Html.DisplayNameFor(model => model.Year)</label>
                <input class="comm_input" value="@Html.DisplayFor(model => model.Year)" readonly />
            </div>
            <div class="form_group">
                <label class="comm_label">@Html.DisplayNameFor(model => model.Month)</label>
                <input class="comm_input" value=" @Html.DisplayFor(model => model.Month)" readonly />
            </div>
            <div class="form_group">
                <label class="comm_label">@Html.DisplayNameFor(model => model.strBagsId)</label>
                <input class="comm_input" value="@Html.DisplayFor(model => model.strBagsId)" readonly></input>
            </div>
            <div class="form_group">
                <label class="comm_label">預覽圖片</label>
                @{
                    int startIndex = Model.img.IndexOf(@"\upload");
                    if (startIndex != -1)
                    {
                        <img style="width:100px; height:100px" src="@Model.img.Substring(startIndex).Replace("\\", "/")" />
                    }
                }
            </div>
        </div>
        <div class="form_submit">
            <input type="submit" class="btn_full" value="確定刪除" asp-route-Year="@Model.Year" asp-route-Month="@Model.Month" asp-route-strBagsId="@Model.strBagsId" />
        </div>
    </form>
    <div class="form_submit">
        <button type="button" class="btn_full" onclick="location.href='@Url.Action("Main", "ProductsColorDetails")'">取消</button>
    </div>
</div>