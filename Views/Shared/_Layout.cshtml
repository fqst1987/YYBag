@{
    string companyid = "12345678";
    string version = DateTime.Now.ToString("yyyy");
}
<!--頁首、頁尾-->
<!DOCTYPE html>
<html lang="zh-tw">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css//yybag.min.css">
    <link rel="stylesheet" href="~/css/_layout.min.css">
    <script src="~/lib//jquery/dist/jquery.min.js"></script>
</head>
<body>
    <div class="menu_wrapper menu_wrapper_top">
        <div class="memu_wrapper_mid">
            <div class="logo flex_align_item_center">
                <a href='/home/home'>YYBag</a>
            </div>
            <div class="menu_items flex_align_item_center">
                <ul>
                    <li>
                        <span>
                            <a asp-action="ClassificationMain" asp-controller="Classification" asp-route-page="1" asp-route-Id="0">全部商品</a>
                        </span>
                    </li>
                    <li>
                        <span>
                            <a asp-action="Main" asp-controller="Classification" asp-route-page="1">最新商品</a>
                        </span>
                    </li>
                    <li>
                        <span>
                            <a asp-action="Main" asp-controller="Classification" asp-route-page="1">熱賣商品</a>
                        </span>
                    </li>
                    <li>
                        <span>
                            <a href="#">最新活動</a>
                        </span>
                    </li>
                </ul>
            </div>
            <div class="login_shoplist flex_align_item_center ">
                <ul>
                    <li id="shoplist">
                        <span>
                            <a asp-action="Login" asp-controller="Member">
                                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-person" viewBox="0 0 15 15">
                                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z" />
                                </svg>
                            </a>
                        </span>
                    </li>
                    <li id="shoplist">
                        <span>
                            <a asp-action="ShopList" asp-controller="Member">
                                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-cart4" viewBox="0 0 16 15">
                                    <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l.5 2H5V5zM6 5v2h2V5zm3 0v2h2V5zm3 0v2h1.36l.5-2zm1.11 3H12v2h.61zM11 8H9v2h2zM8 8H6v2h2zM5 8H3.89l.5 2H5zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0" />
                                </svg>
                            </a>
                        </span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="container_mid">
            @RenderBody()
        </div>
    </div>
    <div class="menu_wrapper menu_wrapper_bottom">
        <div class="footer">
            <div class="company_info flex_direction_column">
                <p>© eyeShow愛秀生活資訊 - YYBags  @version</p>
                <p>統一編號 : @companyid / 營業人名稱 : 双生活有限公司</p>
            </div>
            <button type="button" class="btn_social_media">
                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="white" class="bi bi-instagram" viewBox="0 0 15 15">
                    <path d="M8 0C5.829 0 5.556.01 4.703.048 3.85.088 3.269.222 2.76.42a3.9 3.9 0 0 0-1.417.923A3.9 3.9 0 0 0 .42 2.76C.222 3.268.087 3.85.048 4.7.01 5.555 0 5.827 0 8.001c0 2.172.01 2.444.048 3.297.04.852.174 1.433.372 1.942.205.526.478.972.923 1.417.444.445.89.719 1.416.923.51.198 1.09.333 1.942.372C5.555 15.99 5.827 16 8 16s2.444-.01 3.298-.048c.851-.04 1.434-.174 1.943-.372a3.9 3.9 0 0 0 1.416-.923c.445-.445.718-.891.923-1.417.197-.509.332-1.09.372-1.942C15.99 10.445 16 10.173 16 8s-.01-2.445-.048-3.299c-.04-.851-.175-1.433-.372-1.941a3.9 3.9 0 0 0-.923-1.417A3.9 3.9 0 0 0 13.24.42c-.51-.198-1.092-.333-1.943-.372C10.443.01 10.172 0 7.998 0zm-.717 1.442h.718c2.136 0 2.389.007 3.232.046.78.035 1.204.166 1.486.275.373.145.64.319.92.599s.453.546.598.92c.11.281.24.705.275 1.485.039.843.047 1.096.047 3.231s-.008 2.389-.047 3.232c-.035.78-.166 1.203-.275 1.485a2.5 2.5 0 0 1-.599.919c-.28.28-.546.453-.92.598-.28.11-.704.24-1.485.276-.843.038-1.096.047-3.232.047s-2.39-.009-3.233-.047c-.78-.036-1.203-.166-1.485-.276a2.5 2.5 0 0 1-.92-.598 2.5 2.5 0 0 1-.6-.92c-.109-.281-.24-.705-.275-1.485-.038-.843-.046-1.096-.046-3.233s.008-2.388.046-3.231c.036-.78.166-1.204.276-1.486.145-.373.319-.64.599-.92s.546-.453.92-.598c.282-.11.705-.24 1.485-.276.738-.034 1.024-.044 2.515-.045zm4.988 1.328a.96.96 0 1 0 0 1.92.96.96 0 0 0 0-1.92m-4.27 1.122a4.109 4.109 0 1 0 0 8.217 4.109 4.109 0 0 0 0-8.217m0 1.441a2.667 2.667 0 1 1 0 5.334 2.667 2.667 0 0 1 0-5.334" />
                </svg>
                <a style="text-decoration:none; color:white; font-size: 16px; margin: 0 0 0 5px;" href="https://www.instagram.com/yy_bagg/">YYBags</a>
            </button>
        </div>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

