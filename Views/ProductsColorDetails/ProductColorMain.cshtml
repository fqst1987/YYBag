<!--Administer-->
@model IEnumerable<YYBagProgram.Models.ProductColor>

@{
    ViewData["titlemsg"] = "商品顏色";
    string strBagsId = ViewData["strBagsId"].ToString();
    string strProductName = ViewData["strProductName"].ToString();
    var currentpage = (int)ViewData["currentpage"];
}
<head>
    <title>YYBag - @ViewData["titlemsg"]</title>
    <link rel="stylesheet" href="~/css/Pagination.min.css" />
    <link rel="stylesheet" href="~/css/product.min.css" />
</head>
<div class="main_editor_1600">
    <div class="btn_new_return_area">
        <button type="button" class="btn_new" onclick="location.href='@Url.Action("ProductColorCreate", "ProductsColorDetails", new { strBagsId = strBagsId, page = currentpage})'">
            新增
        </button>
        <button type="button" class="btn_return" onclick="location.href='@Url.Action("ProductsMain", "Products", new{page=currentpage})'">
            返回商品主頁
        </button>
    </div>
    <table class="table_product">
        <thead class="th_product">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.strID)
                </th>
                <th>
                    商品名稱
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.strColor)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.strID)
                    </td>
                    <td>
                        @strProductName
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.strColor)
                    </td>
                    <td>
                        <a asp-action="ProductColorDetailMain" asp-controller="ProductsColorDetails" asp-route-strID="@item.strID" , asp-route-page="@currentpage">編輯</a> |
                        <a asp-action="DeleteMain" asp-controller="ProductsColorDetails" asp-route-strID="@item.strID" asp-route-page="@currentpage">刪除</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
