@model YYBagProgram.Models.Members

@{
    ViewData["titlemsg"] = "建立新會員";
}

<head>
    <title>YYBag-@ViewData["titlemsg"]</title>
</head>
<div class="main_editor">
    <div class="main_top_column_mid" id="register_up">
        <form asp-action="Register" asp-controller="Member" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="strMemberId" />
            <div class="form_group">
                <label asp-for="strMemberName" class="comm_label"></label>
                <input asp-for="strMemberName" class="comm_input_320" placeholder="請填寫真實姓名" />
                <span asp-validation-for="strMemberName" class="text-danger"></span>
            </div>
            <div class="form_group">
                <label asp-for="dateBirthday" class="comm_label"></label>
                <input type="date" asp-for="dateBirthday" class="comm_input_320" />
                <span asp-validation-for="dateBirthday" class="text-danger"></span>
            </div>
            <div class="form_group">
                <label asp-for="strMemberPassWord" class="comm_label"></label>
                <input type="password" asp-for="strMemberPassWord" class="comm_input_320" placeholder="密碼最長20個英數字元" />
                <span asp-validation-for="strMemberPassWord" class="text-danger"></span>
            </div>
            <div class="form_group">
                <label asp-for="strMemberPhone" class="comm_label"></label>
                <input type="number" asp-for="strMemberPhone" class="comm_input_320" />
                <span asp-validation-for="strMemberPhone" class="text-danger"></span>
            </div>
            <div class="form_group">
                <label asp-for="strMemberEmail" class="comm_label"></label>
                <input asp-for="strMemberEmail" class="comm_input_320" />
                <span asp-validation-for="strMemberEmail" class="text-danger"></span>
            </div>
            <div class="form_submit">
                <input type="submit" value="送出" class="btn_full" id="btn_sunmit" />
            </div>
        </form>
        <div style="position: relative; left:50px">
            <button type="button" class="btn_full" id="btn_cancel" onclick="location.href='@Url.Action("Login", "Home")'">取消</button>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}