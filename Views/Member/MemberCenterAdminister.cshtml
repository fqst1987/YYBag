@{
    ViewData["titlemsg"] = "會員中心(管理者)";
}
<head>
    <title>YYBag-@ViewData["titlemsg"]</title>
    <link rel="stylesheet" href="~/css/member.min.css" />
</head>
<div class="main_editor_950 flex_direction_column">
    <div class="flex_just_center">
        <sapn class="member_span_1 font_bold">管理者會員中心</sapn>
    </div>
    <div class="membercenter_administer_main flex_direction_row flex_just_center flex_wrap">
        <div class="membercenter_block flex_direction_column flex_just_start" id="mamage_member">
            <div class="memberlistblock_h align_item_center border_underlint">
                <span class="member_span_2 font_bold">會員管理</span>
            </div>
            <div class="memberlistblock">
                <a class="a_membercenter_1 a_none" href="#" id="allmembers">查看會員</a>
            </div>
            <div class="memberlistblock">
                <a class="a_membercenter_1 a_none" href="#" id="memberrole">編輯會員角色</a>
            </div>
            <div class="memberlistblock">
                <a class="a_membercenter_1 a_none" href="#" id="sendad">寄送會員廣告</a>
            </div>
        </div>

        <div class="membercenter_block flex_direction_column flex_just_start" id="manage_product">
            <div class="memberlistblock_h align_item_center border_underlint">
                <span class="member_span_2 font_bold ">商品管理</span>
            </div>
            <div class="memberlistblock">
                <a class="a_membercenter_1 a_none" href="#" id="allmembers">商品主檔管理</a>
            </div>
        </div>

        <div class="membercenter_block flex_direction_column flex_just_start" id="manage_product">
            <div class="memberlistblock_h align_item_center border_underlint">
                <span class="member_span_2 font_bold">網頁管理</span>
            </div>
            <div class="memberlistblock">
                <a class="a_membercenter_1 a_none" href="#" id="allmembers">頁面輪播設定</a>
            </div>
        </div>
        <div class="membercenter_block flex_direction_column flex_just_start" id="manage_product">
            <div class="memberlistblock_h align_item_center border_underlint">
                <span class="member_span_2 font_bold">出貨管理</span>
            </div>
            <div class="memberlistblock">
                <a class="a_membercenter_1 a_none" href="#" id="allmembers">查看尚未出貨</a>
            </div>
        </div>
        <div class="membercenter_block flex_direction_column flex_just_start" id="manage_product">
            <div class="memberlistblock_h align_item_center border_underlint">
                <span class="member_span_2 font_bold">報表</span>
            </div>
            <div class="memberlistblock">
                <a class="a_membercenter_1 a_none" href="#" id="allmembers">出貨表</a>
            </div>
            <div class="memberlistblock">
                <a class="a_membercenter_1 a_none" href="#" id="allmembers">每月營業額</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            if ($(window).width() <= 768) {
                $('.memberlistblock_h').click(function () {

                    const parentBlock = $(this).parent();

                    const listBlock = parentBlock.find('.memberlistblock');

                    listBlock.slideToggle('500');
                });
            }
        });
    </script>
}
